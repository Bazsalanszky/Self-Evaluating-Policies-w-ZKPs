{

    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Prolog Files",
            "type": "prolog",
            "request": "",
            "runtimeArgs": [],
            "env": {},
            "cwd": "${workspaceRoot}",
            "startupQuery": "start",
            "stopOnEntry": false,
            "linux": {
                // "runtimeExecutable": "/usr/local/bin/gprolog",
                "runtimeExecutable": "/usr/bin/swipl",
                "program": "./gas-support-policy-prolog/policy.pl",
            },
            "windows": {
                "runtimeExecutable": "C:\\Program Files\\swipl\\bin\\swipl.exe",
                "program": ".\\gas-support-policy-prolog\\policy.pl",
            },
            "internalConsoleOptions": "openOnSessionStart",
            "traceCmds": {
                "continue": [
                    "leap",
                    "l"
                ],
                "stepover": [
                    "skip",
                    "s"
                ],
                "stepinto": [
                    "creep",
                    "c"
                ],
                "stepout": [
                    "up",
                    "u"
                ]
            }
        }
    ]
}